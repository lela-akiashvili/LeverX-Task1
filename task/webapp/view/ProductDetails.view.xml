<mvc:View
  controllerName="task.controller.ProductDetails"
  xmlns="sap.uxap"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:m="sap.m"
  xmlns:form="sap.ui.layout.form"
  xmlns:smartForm="sap.ui.comp.smartform"
  xmlns:smartField="sap.ui.comp.smartfield">

  <ObjectPageLayout
    id="ObjectPageLayout"
    showFooter="{viewModel>/editable}" showHeaderContent="true" useIconTabBar="true">
    <headerTitle>
      <ObjectPageHeader objectTitle="{Name}" objectSubtitle="{ID}">
        <breadcrumbs>
          <m:Breadcrumbs>
            <m:Link text="Home" press="onNavHome" />
            <m:Link text="{Name}" />
          </m:Breadcrumbs>
        </breadcrumbs>
        <!-- 
        <actions>
          <ObjectPageHeaderActionButton
            visible="{= !${viewModel>/editable} }"
            text="Edit"
            hideText="false"
            press="onEditPress"
            type="Emphasized" />

          <ObjectPageHeaderActionButton
            visible="{= !${viewModel>/editable} }"
            icon="sap-icon://delete"
            text="Delete"
            hideText="false"
            press="onDeletePress" />
        </actions> -->
      </ObjectPageHeader>
    </headerTitle>

    <sections>
      <ObjectPageSection title=" Info">
        <subSections>
          <ObjectPageSubSection title="Details">
            <smartForm:SmartForm
              id="productSmartForm"
              entityType="ODataDemo.Product"
              editTogglable="true" editToggled="handleEditToggled"
              validationMode="Async"
              title="Product"
            >

              <smartForm:groups>
                <smartForm:Group>
                  <smartForm:groupElements>

                    <!-- Name -->
                    <smartForm:GroupElement label="Name">
                      <smartField:SmartField
                        value="{Name}" />
                    </smartForm:GroupElement>

                    <!-- Description -->
                    <smartForm:GroupElement label="Description">
                      <smartField:SmartField
                        value="{Description}" />
                    </smartForm:GroupElement>

                    <!-- ReleaseDate -->
                    <smartForm:GroupElement label="Release Date">
                      <smartField:SmartField
                        value="{ReleaseDate}" />
                    </smartForm:GroupElement>

                    <!-- DiscontinuedDate -->
                    <smartForm:GroupElement label="Discontinued Date">
                      <smartField:SmartField
                        value="{DiscontinuedDate}" />
                    </smartForm:GroupElement>

                    <!-- Price -->
                    <smartForm:GroupElement label="Price">
                      <smartField:SmartField
                        value="{Price}" />
                    </smartForm:GroupElement>

                    <!-- Rating -->
                    <smartForm:GroupElement label="Rating">
                      <smartField:SmartField
                        value="{Rating}" />
                    </smartForm:GroupElement>

                  </smartForm:groupElements>
                </smartForm:Group>
              </smartForm:groups>
            </smartForm:SmartForm>
          </ObjectPageSubSection>

          <ObjectPageSubSection title="Category Info">
            <smartForm:SmartForm
              id="CateogoryForm"
              entityType="ODataDemo."
              editTogglable="true" editToggled="handleEditToggled"
              validationMode="Async"
              title="{Name}">
              <smartForm:groups>
                <smartForm:Group>
                  <smartForm:groupElements>
                    <!-- Category Name -->
                    <smartForm:GroupElement label="Category">
                      <smartField:SmartField
                        value="{Category/Name}"
                      />
                    </smartForm:GroupElement>
                  </smartForm:groupElements>
                </smartForm:Group>
              </smartForm:groups>
            </smartForm:SmartForm>

          </ObjectPageSubSection>

          <ObjectPageSubSection title="Supplier Info">
            <smartForm:SmartForm
              id="supplierSmartForm"
              entityType="ODataDemo."
              editTogglable="true" editToggled="handleEditToggled"
              validationMode="Async"
              title="{Name}">
              <smartForm:groups>
                <smartForm:Group>
                  <smartForm:groupElements>
                    <!-- Supplier Name -->
                    <smartForm:GroupElement label="Supplier name">
                      <smartField:SmartField
                        value="{Supplier/Name}"
                      />
                    </smartForm:GroupElement>

                    <!-- Supplier Address.City -->
                    <smartForm:GroupElement label="City">
                      <smartField:SmartField
                        value="{Supplier/Address/City}"
                      />
                    </smartForm:GroupElement>

                    <!-- Supplier Address.Street -->
                    <smartForm:GroupElement label="Street">
                      <smartField:SmartField
                        value="{Supplier/Address/Street}"
                      />
                    </smartForm:GroupElement>

                  </smartForm:groupElements>
                </smartForm:Group>
              </smartForm:groups>
            </smartForm:SmartForm>

          </ObjectPageSubSection>
        </subSections>
      </ObjectPageSection>
    </sections>
    <!-- 
    <footer>
      <m:Toolbar>
        <m:ToolbarSpacer />
        <m:Button
          text="Save"
          type="Emphasized"
          press="onSavePress"
        />
        <m:Button
          text="Cancel"
          press="onCancelPress"
        />
      </m:Toolbar>
    </footer> -->
  </ObjectPageLayout>
</mvc:View>